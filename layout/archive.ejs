<% if (!is_year()) { %>

  <section class="valign-wrapper home-profile hide-on-med-and-up <%= theme.color %> <%= theme.titleColor %>-text">
    <div class="card-panel z-depth-0 transparent valign">
      <h1><%= _p('archive_title') %></h1>
    </div>
  </section>

  <div id="archive" class="row">

    <div class="col s12 m12 l12">
      <% if (site.posts.length > 0) { %>
        <%
          var firstPost = site.posts.sort('date', -1).first(),
            year = firstPost.date.year(),
            month = firstPost.date.month();
        %>
      <% } %>
      <ul class="collapsible popout" data-collapsible="expandable">
        <li class="active z-depth-0 <%= theme.subColor %>-text">
          <div class="collapsible-header active"><i class="material-icons">loyalty</i><%= date(firstPost.date, 'YYYY MM') %></div>
          <div class="collapsible-body">
            <p class="transparent">
              <% site.posts.sort('date', -1).each(function (post) { %>
                <% if (month !== post.date.month() || year !== post.date.year()) { %>
                  <% month = post.date.month(); year = post.date.year() %>
                  </p>
                  </div>
                  </li>
                  <li class="z-depth-0 <%= theme.subColor %>-text">
                    <div class="collapsible-header"><i class="material-icons">loyalty</i><%= date(post.date, 'YYYY MM') %></div>
                    <div class="collapsible-body"><p class="transparent">
                <% } %>
                  <span class="row">
                    <span class="col m8 s12">
                      <%- link_to(config.root + post.path, post.title, {
                        external: theme.external_link,
                        class: theme.subColor + '-text'
                      }) %>
                    </span>
                    <time datetime="<%= post.date.toJSON() %>" class="<%= theme.subColor %>-text right valign-wrapper m4 s12">
                      <%= date(post.date, 'Do ' + (theme.time_format || config.time_format)) %>
                    </time>
                  </span>
              <% }); %>
            </p>
          </div>
        </li>
      </ul>
    </div>

  </div>

<% } %>
