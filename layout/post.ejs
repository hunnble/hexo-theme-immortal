
<article id="post" class="card-panel">
  <h3 class="text-flow"><%- page.title %></h3>
  <div class="row">
    <div class="col s12">
      <div class="valign-wrapper <%= theme.subColor %>-text">
        <i class="material-icons valign">query_builder</i>
        <time datetime="<%= page.date.toJSON() %>" class="valign">
          <%= date(page.date, theme.date_format || config.date_format) %>
          <%= date(page.date, theme.time_format || config.time_format) %>
        </time>
      </div>
      <div class="section">
        <% page.tags.each(function (tag, index) { %>
          <span class="new badge <%= theme.tagColors[index % page.tags.length] %> left" data-badge-caption=""><a class="white-text" href=<%= url_for(tag.path) %>><%= tag.name %></a></span>
        <% }); %>
      </div>
    </div>
  </div>
  <%- page.content %>
</article>
